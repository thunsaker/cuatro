<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css' />

    @RenderSection("HeaderExtras", false)
</head>

<body>
    <div class="header">
        <div class="header-title-wrapper">
            <span class="title"><a href="@Url.Action("Index", "Home", Model)">Cuatro</a></span><br />
            <span class="subtitle">ASP.NET MVC Web Demo</span>
        </div>
        @{Html.RenderPartial("HeaderProfile", ViewData);}
    </div>

    <div class="content-wrapper-outer">
        <div class="sidebar">
            <div class="sidebar-header">
                Endpoints
            </div>
            <div class="sidebar-section">
                <div class="sidebar-section-title">
                    Users
                </div>
                <div id="div_users_endpoints" class="sidebar-section-content">
                    <ul>
                        <li>
                            <a href="@Url.Action("Requests", "Foursquare")">Friend Requests</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Leaderboard", "Foursquare")">Leaderboard</a>
                        </li>
                        @*<li>
                            <a href="@Url.Action("UserSearch", "Foursquare")">Search Users</a>
                        </li>*@

                        <li>
                            <a href="@Url.Action("Badges", "Foursquare")">Unlocked Badges</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Checkins", "Foursquare")">Checkins</a>
                        </li>
                        @*<li>
                            <a href="@Url.Action("FriendsList", "Foursquare")">Friends List</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Mayorships", "Foursquare")">Mayorships</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Tips", "Foursquare")">Tips</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Todos", "Foursquare")">Todos</a>
                        </li>
                        <li>
                            <a href="@Url.Action("VenueHistory", "Foursquare")">Venue History</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </div>
        <div class="content-wrapper-inner">
            @if (ViewBag.Title != ""){
                <div class="page-title">
                    @ViewBag.Title
                    @RenderSection("EndpointOptionsInTitle", false)
                </div>
            }
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
